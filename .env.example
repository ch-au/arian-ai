# ============================================
# ARIAN AI - Environment Variables Template
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env files with real secrets!

# ============================================
# Database
# ============================================
DATABASE_URL=postgresql://user:password@host:5432/dbname

# ============================================
# Authentication
# ============================================
JWT_SECRET=generate-a-secure-random-string-here

# Neon Auth / Stack Auth Configuration
VITE_STACK_PROJECT_ID=your_neon_auth_project_id
VITE_STACK_PUBLISHABLE_CLIENT_KEY=your_neon_auth_publishable_key
STACK_SECRET_SERVER_KEY=your_neon_auth_secret_key

# ============================================
# LLM API Keys
# ============================================
# OpenAI
OPENAI_API_KEY=sk-proj-your-key-here

# Gemini
GEMINI_API_KEY=your-gemini-key

# OpenRouter (optional)
OPENROUTER_API_KEY=sk-or-your-key

# ============================================
# Langfuse Observability
# ============================================
LANGFUSE_SECRET_KEY=sk-lf-your-key
LANGFUSE_PUBLIC_KEY=pk-lf-your-key
LANGFUSE_HOST=https://cloud.langfuse.com

# ============================================
# Model Configuration
# ============================================
# Override model selection from Langfuse prompts
# NEGOTIATION_MODEL=gemini/gemini-flash-lite-latest
# LITELLM_MODEL=gpt-4o-mini

# ============================================
# Python Negotiation Service
# ============================================
# Control log verbosity for the negotiation engine
# Options: DEBUG, INFO, WARNING, ERROR
# INFO: Shows high-level workflow (rounds, outcomes) - recommended for production
# DEBUG: Shows detailed internal operations - use for troubleshooting
PYTHON_LOG_LEVEL=INFO

# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
PORT=3000

# CORS - Frontend URL (for production)
FRONTEND_URL=http://localhost:5173
