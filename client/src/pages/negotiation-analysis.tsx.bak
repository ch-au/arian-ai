import { useEffect, useMemo, useState } from "react";
import { useRoute } from "wouter";
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { ArrowLeft, TrendingUp, Zap, DollarSign, Target, Info } from "lucide-react";
import { useQuery } from "@tanstack/react-query";
import {
  Dialog,
  DialogContent,
  DialogDescription,
  DialogHeader,
  DialogTitle,
} from "@/components/ui/dialog";
import { Badge } from "@/components/ui/badge";
import type { NegotiationScenario } from "@/hooks/use-negotiations";
import { useNegotiationDetail } from "@/hooks/use-negotiation-detail";
import { summarizeDimensions, summarizeProducts } from "@/lib/analysis-helpers";

interface NegotiationAnalysis {
  negotiation: {
    id: string;
    title: string;
    userRole: string;
  };
  runs: Array<{
    id: string;
    runNumber: number;
    techniqueId: string;
    tacticId: string;
    techniqueName: string;
    tacticName: string;
    dealValue: number;
    totalRounds: number;
    actualCost: number;
    outcome: string;
    status: string;
    otherDimensions: Record<string, any>;
    conversationLog?: Array<{
      agent: string;
      round: number;
      message: string;
      offer?: {
        products?: Array<{ name: string; price: number | string | null }>;
      };
    }>;
    efficiency: number;
    rank: number;
    // AI Evaluation fields
    tacticalSummary?: string;
    techniqueEffectivenessScore?: number;
    tacticEffectivenessScore?: number;
    dimensionResults?: Array<{
      dimensionName: string;
      finalValue: string;
      targetValue: string;
      achievedTarget: boolean;
      priorityScore: number;
    }>;
    productResults?: Array<{
      productName: string;
      agreedPrice: string;
      subtotal: string;
      withinZopa: boolean;
      performanceScore: string | null;
    }>;
    roundDimensions?: Array<{ round: number; dimension: string; value: number }>;
  }>;
  summary: {
    bestDealValue: {
      runId: string;
      value: number;
      technique: string;
      tactic: string;
      rounds: number;
    } | null;
    fastestCompletion: {
      runId: string;
      rounds: number;
      technique: string;
      tactic: string;
      dealValue: number;
    } | null;
    mostEfficient: {
      runId: string;
      efficiency: number;
      technique: string;
      tactic: string;
      dealValue: number;
      rounds: number;
    } | null;
    avgDealValue: number;
    avgRounds: number;
    totalRuns: number;
    completedRuns: number;
  };
  matrix: Array<{
    techniqueId: string;
    techniqueName: string;
    tacticId: string;
    tacticName: string;
    dealValue: number;
    rounds: number;
    efficiency: number;
    runId: string;
  }>;
}

export function NegotiationAnalysisView({ negotiationId }: { negotiationId: string }) {
  const [isEvaluating, setIsEvaluating] = useState(false);
  const [selectedCell, setSelectedCell] = useState<{ technique: string; tactic: string } | null>(null);

  const { data: analysis, isLoading, error, refetch } = useQuery<NegotiationAnalysis>({
    queryKey: [`/api/negotiations/${negotiationId}/analysis`],
    enabled: !!negotiationId,
  });

  const { data: negotiationDetail } = useNegotiationDetail(negotiationId ?? null);

  const handleGenerateEvaluation = async () => {
    if (!negotiationId) return;

    setIsEvaluating(true);
    try {
      const response = await fetch(`/api/negotiations/${negotiationId}/analysis/evaluate`, {
        method: "POST",
      });

      if (!response.ok) {
        throw new Error("Failed to generate evaluation");
      }

      // Refresh analysis data
      await refetch();
    } catch (error) {
      console.error("Evaluation failed:", error);
      alert("Fehler beim Generieren der KI-Bewertung");
    } finally {
      setIsEvaluating(false);
    }
  };

  const scenario: NegotiationScenario | undefined = negotiationDetail?.negotiation?.scenario;
  const products = negotiationDetail?.products ?? [];
  const dimensionSummary = useMemo(() => summarizeDimensions(analysis?.runs ?? []), [analysis]);
  const productSummary = useMemo(() => summarizeProducts(analysis?.runs ?? []), [analysis]);
  const scenarioSummary = useMemo(() => {
    if (!scenario) return "Profil wird geladen ‚Ä¶";
    const company = scenario.companyProfile?.organization ?? "Unbekanntes Unternehmen";
    const counterpart = scenario.counterpartProfile?.name ?? "Gegenpartei offen";
    const market = scenario.market?.name ?? "Markt offen";
    return `${company} ‚Üî ${counterpart} ¬∑ Markt: ${market}`;
  }, [scenario]);

  if (isLoading) {
    return (
      <div className="container mx-auto p-6">
        <div className="animate-pulse space-y-4">
          <div className="h-8 bg-gray-200 rounded w-1/3"></div>
          <div className="h-64 bg-gray-200 rounded"></div>
        </div>
      </div>
    );
  }

  if (error || !analysis) {
    return (
      <div className="container mx-auto p-6">
        <Card>
          <CardHeader>
            <CardTitle>Error</CardTitle>
            <CardDescription>Failed to load analysis data</CardDescription>
          </CardHeader>
        </Card>
      </div>
    );
  }

  const formatCurrency = (value: number) => {
    return new Intl.NumberFormat("de-DE", {
      style: "currency",
      currency: "EUR",
      minimumFractionDigits: 0,
      maximumFractionDigits: 0,
    }).format(value);
  };

  const formatPercent = (value: number) => `${Math.round(value)}%`;

  const toNumber = (value: string | number | null | undefined) => {
    if (typeof value === "number") return value;
    if (typeof value === "string" && value.trim() !== "") {
      const parsed = Number(value);
      return Number.isFinite(parsed) ? parsed : 0;
    }
    return 0;
  };

  const getRankBadge = (rank: number) => {
    if (rank === 1) return "ü•á";
    if (rank === 2) return "ü•à";
    if (rank === 3) return "ü•â";
    return `${rank}Ô∏è‚É£`;
  };

  const getPerformanceColor = (rank: number, total: number) => {
    const percentile = rank / total;
    if (percentile <= 0.33) return "bg-green-100 text-green-800 border-green-300";
    if (percentile <= 0.66) return "bg-yellow-100 text-yellow-800 border-yellow-300";
    return "bg-red-100 text-red-800 border-red-300";
  };

  // Filter completed runs - show all completed, even if dealValue is 0 (legacy data)
  const completedRuns = analysis.runs.filter(r => r.status === "completed");
  const sortedRuns = [...completedRuns].sort((a, b) => b.dealValue - a.dealValue);

  // Check if we have meaningful deal values
  const hasDeals = sortedRuns.some(r => r.dealValue > 0);

  return (
    <div className="container mx-auto p-6 space-y-6">
      {/* Header */}
      <div className="flex items-center justify-between">
        <div>
          <div className="flex items-center gap-2 mb-2">
            <Button
              variant="ghost"
              size="sm"
              onClick={() => window.history.back()}
            >
              <ArrowLeft className="h-4 w-4 mr-2" />
              Zur√ºck
            </Button>
          </div>
          <h1 className="text-3xl font-bold">üìä Ergebnisanalyse</h1>
          <p className="text-muted-foreground mt-1">
            {analysis.negotiation.title} ¬∑ {analysis.negotiation.userRole === "buyer" ? "K√§ufer" : "Verk√§ufer"} ¬∑{" "}
            {analysis.summary.completedRuns} von {analysis.summary.totalRuns} Runs abgeschlossen
          </p>
          {scenario && (
            <p className="text-sm text-muted-foreground">{scenarioSummary}</p>
          )}
        </div>
        {hasDeals && completedRuns.some(r => !r.tacticalSummary) && (
          <Button
            onClick={handleGenerateEvaluation}
            disabled={isEvaluating}
            className="bg-purple-600 hover:bg-purple-700"
          >
            {isEvaluating ? "Generiere KI-Bewertung..." : "ü§ñ KI-Bewertung generieren"}
          </Button>
        )}
      </div>

      {/* Scenario Snapshot */}
      {scenario && (
        <Card>
          <CardHeader>
            <CardTitle>Verhandlungskontext</CardTitle>
            <CardDescription>Aus Scenario-JSON und Produktsetup.</CardDescription>
          </CardHeader>
          <CardContent className="grid gap-4 md:grid-cols-3 text-sm text-muted-foreground">
            <div>
              <p className="text-xs uppercase tracking-wide text-gray-400">Unternehmen</p>
              <p className="text-base text-foreground">{scenario.companyProfile?.organization ?? "Offen"}</p>
              <p>Land: {scenario.companyProfile?.country ?? "n/v"}</p>
              <p>Frequenz: {scenario.negotiationFrequency ?? "n/v"}</p>
            </div>
            <div>
              <p className="text-xs uppercase tracking-wide text-gray-400">Gegenpartei</p>
              <p className="text-base text-foreground">{scenario.counterpartProfile?.name ?? "Noch offen"}</p>
              <p>Stil: {scenario.counterpartProfile?.style ?? "n/v"}</p>
              <p>Machtbalance: {scenario.counterpartProfile?.powerBalance ?? "n/v"}</p>
            </div>
            <div>
              <p className="text-xs uppercase tracking-wide text-gray-400">Markt & Produkte</p>
              <p className="text-base text-foreground">{scenario.market?.name ?? "Markt offen"}</p>
              <p>W√§hrung: {scenario.market?.currencyCode ?? "n/v"}</p>
              <p>{products.length} Produkte konfiguriert</p>
            </div>
          </CardContent>
        </Card>
      )}

      <div className="grid gap-6 md:grid-cols-2">
        <Card>
          <CardHeader>
            <CardTitle>Dimension Performance</CardTitle>
            <CardDescription>Erfolgsquote pro Verhandlungsdimension</CardDescription>
          </CardHeader>
          <CardContent>
            {dimensionSummary.length === 0 ? (
              <p className="text-sm text-muted-foreground">Noch keine Dimensionsergebnisse vorhanden.</p>
            ) : (
              <table className="w-full text-sm">
                <thead>
                  <tr className="text-left text-xs uppercase text-muted-foreground">
                    <th className="pb-2">Dimension</th>
                    <th className="pb-2">Priorit√§t</th>
                    <th className="pb-2 text-right">Erfolgsquote</th>
                  </tr>
                </thead>
                <tbody>
                  {dimensionSummary.map((dim) => (
                    <tr key={dim.name} className="border-t">
                      <td className="py-2 font-medium">{dim.name}</td>
                      <td className="py-2">{dim.priority}</td>
                      <td className="py-2 text-right font-semibold">
                        {formatPercent(dim.rate)} ({dim.achieved}/{dim.total})
                      </td>
                    </tr>
                  ))}
                </tbody>
              </table>
            )}
          </CardContent>
        </Card>

        <Card>
          <CardHeader>
            <CardTitle>Produkt Performance</CardTitle>
            <CardDescription>√ò Preis, Performance Score und ZOPA-Anteil</CardDescription>
          </CardHeader>
          <CardContent>
            {productSummary.length === 0 ? (
              <p className="text-sm text-muted-foreground">Noch keine Produktdaten vorhanden.</p>
            ) : (
              <table className="w-full text-sm">
                <thead>
                  <tr className="text-left text-xs uppercase text-muted-foreground">
                    <th className="pb-2">Produkt</th>
                    <th className="pb-2 text-right">√ò Preis</th>
                    <th className="pb-2 text-right">√ò Score</th>
                    <th className="pb-2 text-right">ZOPA</th>
                  </tr>
                </thead>
                <tbody>
                  {productSummary.map((prod) => (
                    <tr key={prod.name} className="border-t">
                      <td className="py-2 font-medium">{prod.name}</td>
                      <td className="py-2 text-right">{formatCurrency(prod.avgPrice)}</td>
                      <td className="py-2 text-right">{prod.avgScore.toFixed(1)}</td>
                      <td className="py-2 text-right">{formatPercent(prod.zopaRate)}</td>
                    </tr>
                  ))}
                </tbody>
              </table>
            )}
          </CardContent>
        </Card>
      </div>

      {/* Legacy Data Warning */}
      {!hasDeals && completedRuns.length > 0 && (
        <Card className="border-2 border-amber-500 bg-amber-50">
          <CardHeader>
            <CardTitle className="text-amber-800">‚ö†Ô∏è Legacy Data</CardTitle>
            <CardDescription>
              Diese Simulation Runs wurden vor der Deal Value Implementierung erstellt.
              F√ºr vollst√§ndige Analyse bitte neue Simulation starten.
            </CardDescription>
          </CardHeader>
        </Card>
      )}

      {/* KPI Winner Cards */}
      {hasDeals && (
        <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
          {analysis.summary.bestDealValue && (
            <Card className="border-2 border-green-500">
            <CardHeader className="pb-3">
              <CardTitle className="text-sm font-medium text-muted-foreground flex items-center gap-2">
                <TrendingUp className="h-4 w-4" />
                ü•á Bester Deal Value
              </CardTitle>
            </CardHeader>
            <CardContent>
              <div className="text-2xl font-bold text-green-600">
                {formatCurrency(analysis.summary.bestDealValue.value)}
              </div>
              <div className="text-sm text-muted-foreground mt-2">
                <div className="font-medium">{analysis.summary.bestDealValue.technique}</div>
                <div>+ {analysis.summary.bestDealValue.tactic}</div>
                <div className="text-xs mt-1">{analysis.summary.bestDealValue.rounds} Runden</div>
              </div>
            </CardContent>
          </Card>
        )}

        {analysis.summary.fastestCompletion && (
          <Card className="border-2 border-blue-500">
            <CardHeader className="pb-3">
              <CardTitle className="text-sm font-medium text-muted-foreground flex items-center gap-2">
                <Zap className="h-4 w-4" />
                ‚ö° Schnellster Abschluss
              </CardTitle>
            </CardHeader>
            <CardContent>
              <div className="text-2xl font-bold text-blue-600">
                {analysis.summary.fastestCompletion.rounds} Runden
              </div>
              <div className="text-sm text-muted-foreground mt-2">
                <div className="font-medium">{analysis.summary.fastestCompletion.technique}</div>
                <div>+ {analysis.summary.fastestCompletion.tactic}</div>
                <div className="text-xs mt-1">{formatCurrency(analysis.summary.fastestCompletion.dealValue)}</div>
              </div>
            </CardContent>
          </Card>
        )}

        {analysis.summary.mostEfficient && (
          <Card className="border-2 border-purple-500">
            <CardHeader className="pb-3">
              <CardTitle className="text-sm font-medium text-muted-foreground flex items-center gap-2">
                <Target className="h-4 w-4" />
                üí∞ Beste Effizienz
              </CardTitle>
            </CardHeader>
            <CardContent>
              <div className="text-2xl font-bold text-purple-600">
                {formatCurrency(analysis.summary.mostEfficient.efficiency)}/Runde
              </div>
              <div className="text-sm text-muted-foreground mt-2">
                <div className="font-medium">{analysis.summary.mostEfficient.technique}</div>
                <div>+ {analysis.summary.mostEfficient.tactic}</div>
                <div className="text-xs mt-1">
                  {formatCurrency(analysis.summary.mostEfficient.dealValue)} in {analysis.summary.mostEfficient.rounds} Runden
                </div>
              </div>
            </CardContent>
          </Card>
        )}
      </div>
      )}

      {/* Performance Matrix */}
      <Card>
        <CardHeader>
          <CardTitle>Performance Matrix: Technik √ó Taktik</CardTitle>
          <CardDescription>
            Farbcodierung nach Deal Value: Gr√ºn (beste) ‚Üí Gelb ‚Üí Rot (schlechteste) ¬∑
            <Info className="inline h-3 w-3 mx-1" />
            Klicke auf eine Zelle f√ºr KI-Bewertung und Details
          </CardDescription>
        </CardHeader>
        <CardContent>
          <div className="overflow-x-auto">
            <table className="w-full border-collapse">
              <thead>
                <tr>
                  <th className="border p-2 bg-gray-50 text-left font-medium">Technik / Taktik</th>
                  {[...new Set(analysis.matrix.map(m => m.tacticName))].map(tactic => (
                    <th key={tactic} className="border p-2 bg-gray-50 text-center font-medium min-w-[150px]">
                      {tactic}
                    </th>
                  ))}
                </tr>
              </thead>
              <tbody>
                {[...new Set(analysis.matrix.map(m => m.techniqueName))].map(technique => (
                  <tr key={technique}>
                    <td className="border p-2 font-medium bg-gray-50">{technique}</td>
                    {[...new Set(analysis.matrix.map(m => m.tacticName))].map(tactic => {
                      // Aggregate all runs for this technique/tactic combination
                      const cellRuns = analysis.runs.filter(
                        r => r.techniqueName === technique && r.tacticName === tactic && r.status === 'completed'
                      );

                      if (cellRuns.length === 0) {
                        return (
                          <td key={tactic} className="border p-2 bg-gray-100 text-center text-gray-400">
                            <div className="text-2xl mb-1">0</div>
                            <div className="text-xs">0 Runden</div>
                          </td>
                        );
                      }

                      // Calculate aggregates - only include runs with dealValue > 0
                      const cellRunsWithDeals = cellRuns.filter(r => r.dealValue > 0);
                      const avgDealValue = cellRunsWithDeals.length > 0
                        ? cellRunsWithDeals.reduce((sum, r) => sum + r.dealValue, 0) / cellRunsWithDeals.length
                        : 0;
                      const avgRounds = cellRuns.reduce((sum, r) => sum + r.totalRounds, 0) / cellRuns.length;
                      const avgTechniqueScore = cellRuns.filter(r => r.techniqueEffectivenessScore).length > 0
                        ? cellRuns.filter(r => r.techniqueEffectivenessScore).reduce((sum, r) => sum + (r.techniqueEffectivenessScore || 0), 0) / cellRuns.filter(r => r.techniqueEffectivenessScore).length
                        : null;
                      const avgTacticScore = cellRuns.filter(r => r.tacticEffectivenessScore).length > 0
                        ? cellRuns.filter(r => r.tacticEffectivenessScore).reduce((sum, r) => sum + (r.tacticEffectivenessScore || 0), 0) / cellRuns.filter(r => r.tacticEffectivenessScore).length
                        : null;

                      // Find rank based on average deal value
                      const allCompletedRuns = analysis.runs.filter(r => r.status === 'completed');
                      const sortedByDealValue = [...allCompletedRuns].sort((a, b) => b.dealValue - a.dealValue);
                      // Approximate rank by comparing average to individual runs
                      const rank = sortedByDealValue.filter(r => r.dealValue > avgDealValue).length + 1;

                      const colorClass = getPerformanceColor(rank, sortedByDealValue.length);
                      const hasEvaluation = cellRuns.some(r => r.tacticalSummary);

                      return (
                        <td
                          key={tactic}
                          className={`border p-3 ${colorClass} cursor-pointer hover:opacity-80 transition-opacity relative`}
                          onClick={() => setSelectedCell({ technique, tactic })}
                        >
                          <div className="text-center">
                            <div className="text-2xl mb-1">{getRankBadge(rank)}</div>
                            <div className="font-bold text-lg">{formatCurrency(avgDealValue)}</div>
                            <div className="text-xs mt-1">{Math.round(avgRounds)} Runden</div>
                            {hasEvaluation && (
                              <div className="absolute top-1 right-1">
                                <Info className="h-4 w-4 text-purple-600" />
                              </div>
                            )}
                            <div className="text-xs mt-1 text-gray-600">{cellRuns.length} Runden</div>
                            {(avgTechniqueScore || avgTacticScore) && (
                              <div className="text-xs mt-1 flex justify-center gap-2">
                                {avgTechniqueScore && (
                                  <span className="bg-white/50 px-1 rounded">üìä {avgTechniqueScore.toFixed(1)}/10</span>
                                )}
                                {avgTacticScore && (
                                  <span className="bg-white/50 px-1 rounded">üéØ {avgTacticScore.toFixed(1)}/10</span>
                                )}
                              </div>
                            )}
                          </div>
                        </td>
                      );
                    })}
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </CardContent>
      </Card>

      {/* Detailed Results Table */}
      <Card>
        <CardHeader>
          <CardTitle>Detaillierte Ergebnisse</CardTitle>
          <CardDescription>Alle Simulation Runs sortiert nach Performance</CardDescription>
        </CardHeader>
        <CardContent>
          <div className="overflow-x-auto">
            <table className="w-full">
              <thead>
                <tr className="border-b">
                  <th className="text-left p-2 font-medium">#</th>
                  <th className="text-left p-2 font-medium">Technik</th>
                  <th className="text-left p-2 font-medium">Taktik</th>
                  <th className="text-right p-2 font-medium">Deal Value</th>
                  <th className="text-right p-2 font-medium">Runden</th>
                  <th className="text-right p-2 font-medium">Effizienz</th>
                  <th className="text-left p-2 font-medium">Status</th>
                </tr>
              </thead>
              <tbody>
                {sortedRuns.map((run, index) => {
                  const rank = index + 1;
                  const colorClass = getPerformanceColor(rank, sortedRuns.length);

                  return (
                    <tr key={run.id} className={`border-b hover:bg-gray-50 ${colorClass}`}>
                      <td className="p-2">
                        <span className="text-2xl">{getRankBadge(rank)}</span>
                      </td>
                      <td className="p-2 font-medium">{run.techniqueName}</td>
                      <td className="p-2">{run.tacticName}</td>
                      <td className="p-2 text-right font-bold">{formatCurrency(run.dealValue)}</td>
                      <td className="p-2 text-right">{run.totalRounds}</td>
                      <td className="p-2 text-right text-sm text-muted-foreground">
                        {formatCurrency(run.efficiency)}/Runde
                      </td>
                      <td className="p-2">
                        <span className="px-2 py-1 rounded text-xs bg-green-100 text-green-800">
                          {run.outcome}
                        </span>
                      </td>
                    </tr>
                  );
                })}
              </tbody>
            </table>
          </div>
        </CardContent>
      </Card>

      {/* AI Insights Panel */}
      {hasDeals && analysis.summary.bestDealValue && (() => {
        const bestRun = analysis.runs.find(r => r.id === analysis.summary.bestDealValue?.runId);
        const hasEvaluation = bestRun?.tacticalSummary;

        return (
          <Card className="border-2 border-purple-500 bg-purple-50">
            <CardHeader>
              <CardTitle className="flex items-center gap-2">
                ü§ñ KI-Analyse: Beste Strategie
              </CardTitle>
              <CardDescription>
                Basierend auf Langfuse Prompt "simulation_eval" f√ºr: "{analysis.summary.bestDealValue.technique}" + "{analysis.summary.bestDealValue.tactic}"
              </CardDescription>
            </CardHeader>
            <CardContent className="space-y-4">
              {hasEvaluation ? (
                <>
                  {/* AI Generated Summary */}
                  <div className="bg-white p-4 rounded-lg border border-purple-200">
                    <h4 className="font-semibold mb-2">üìù Taktische Zusammenfassung</h4>
                    <p className="text-sm leading-relaxed">{bestRun.tacticalSummary}</p>
                  </div>

                  {/* Effectiveness Scores */}
                  <div className="grid grid-cols-2 gap-4">
                    <div className="bg-white p-4 rounded-lg border border-purple-200">
                      <h4 className="font-semibold mb-2">üìä Influence Technique Score</h4>
                      <div className="flex items-center gap-2">
                        <div className="text-3xl font-bold text-purple-600">
                          {bestRun.techniqueEffectivenessScore}/10
                        </div>
                        <div className="text-sm text-muted-foreground">
                          {analysis.summary.bestDealValue.technique}
                        </div>
                      </div>
                    </div>

                    <div className="bg-white p-4 rounded-lg border border-purple-200">
                      <h4 className="font-semibold mb-2">üéØ Tactic Effectiveness Score</h4>
                      <div className="flex items-center gap-2">
                        <div className="text-3xl font-bold text-purple-600">
                          {bestRun.tacticEffectivenessScore}/10
                        </div>
                        <div className="text-sm text-muted-foreground">
                          {analysis.summary.bestDealValue.tactic}
                        </div>
                      </div>
                    </div>
                  </div>

                  {/* Performance Context */}
                  <div className="bg-white p-4 rounded-lg border border-purple-200">
                    <h4 className="font-semibold mb-2">üí∞ Verhandlungsergebnis</h4>
                    <ul className="space-y-1 text-sm">
                      <li><strong>Deal Value:</strong> {formatCurrency(analysis.summary.bestDealValue.value)}</li>
                      <li><strong>Runden:</strong> {analysis.summary.bestDealValue.rounds}</li>
                      <li><strong>Effizienz:</strong> {formatCurrency(analysis.summary.bestDealValue.value / analysis.summary.bestDealValue.rounds)}/Runde</li>
                    </ul>
                  </div>
                </>
              ) : (
                <>
                  <div>
                    <h3 className="font-bold text-lg mb-2">
                      Empfehlung: "{analysis.summary.bestDealValue.technique}" + "{analysis.summary.bestDealValue.tactic}"
                    </h3>
                    <p className="text-sm text-muted-foreground">
                      Klicke auf "KI-Bewertung generieren" um eine detaillierte Analyse zu erhalten.
                    </p>
                  </div>

                  <div className="bg-white p-4 rounded-lg border border-purple-200">
                    <h4 className="font-semibold mb-2">‚úÖ Warum diese Kombination?</h4>
                    <ul className="space-y-2 ml-4 text-sm">
                      <li>
                        <strong>H√∂chster Deal Value:</strong> {formatCurrency(analysis.summary.bestDealValue.value)}
                        {analysis.summary.avgDealValue > 0 && (
                          <span className="text-sm text-muted-foreground ml-2">
                            (+{Math.round(((analysis.summary.bestDealValue.value - analysis.summary.avgDealValue) / analysis.summary.avgDealValue) * 100)}% vs. Durchschnitt)
                          </span>
                        )}
                      </li>
                      <li>
                        <strong>Verhandlungsdauer:</strong> {analysis.summary.bestDealValue.rounds} Runden
                        {analysis.summary.avgRounds > 0 && analysis.summary.bestDealValue.rounds <= analysis.summary.avgRounds && (
                          <span className="text-sm text-green-600 ml-2">
                            (Schneller als Durchschnitt)
                          </span>
                        )}
                      </li>
                    </ul>
                  </div>
                </>
              )}
            </CardContent>
          </Card>
        );
      })()}

      {/* Dialog for Cell Details */}
      {selectedCell && (() => {
        // Get all runs for this technique/tactic combination
        const cellRuns = analysis.runs.filter(
          r => r.techniqueName === selectedCell.technique && r.tacticName === selectedCell.tactic && r.status === 'completed'
        );

        if (cellRuns.length === 0) return null;

        // Calculate aggregates
        const cellRunsWithDeals = cellRuns.filter(r => r.dealValue > 0);
        const avgDealValue = cellRunsWithDeals.length > 0
          ? cellRunsWithDeals.reduce((sum, r) => sum + r.dealValue, 0) / cellRunsWithDeals.length
          : 0;
        const avgRounds = cellRuns.reduce((sum, r) => sum + r.totalRounds, 0) / cellRuns.length;
        const avgEfficiency = avgRounds > 0 ? avgDealValue / avgRounds : 0;

        const avgTechniqueScore = cellRuns.filter(r => r.techniqueEffectivenessScore).length > 0
          ? cellRuns.filter(r => r.techniqueEffectivenessScore).reduce((sum, r) => sum + (r.techniqueEffectivenessScore || 0), 0) / cellRuns.filter(r => r.techniqueEffectivenessScore).length
          : null;
        const avgTacticScore = cellRuns.filter(r => r.tacticEffectivenessScore).length > 0
          ? cellRuns.filter(r => r.tacticEffectivenessScore).reduce((sum, r) => sum + (r.tacticEffectivenessScore || 0), 0) / cellRuns.filter(r => r.tacticEffectivenessScore).length
          : null;

        // Get the best run from this combination for tactical summary
        const bestRun = cellRunsWithDeals.reduce<typeof cellRunsWithDeals[number] | null>((best, current) => {
          if (!best || current.dealValue > best.dealValue) {
            return current;
          }
          return best;
        }, null);

        return (
          <Dialog open={!!selectedCell} onOpenChange={() => setSelectedCell(null)}>
            <DialogContent className="max-w-2xl max-h-[80vh] overflow-y-auto">
              <DialogHeader>
                <DialogTitle className="text-xl">
                  {selectedCell.technique} √ó {selectedCell.tactic}
                </DialogTitle>
                <DialogDescription>
                  Aggregierte Ergebnisse √ºber {cellRuns.length} Durchl√§ufe
                </DialogDescription>
              </DialogHeader>

              <div className="space-y-4 mt-4">
                {/* Performance Overview - Aggregate */}
                <div className="grid grid-cols-3 gap-4">
                  <div className="bg-gray-50 p-3 rounded-lg">
                    <div className="text-xs text-muted-foreground">√ò Deal Value</div>
                    <div className="text-lg font-bold">{formatCurrency(avgDealValue)}</div>
                    <div className="text-xs text-muted-foreground mt-1">{cellRunsWithDeals.length} Deals</div>
                  </div>
                  <div className="bg-gray-50 p-3 rounded-lg">
                    <div className="text-xs text-muted-foreground">√ò Runden</div>
                    <div className="text-lg font-bold">{Math.round(avgRounds)}</div>
                    <div className="text-xs text-muted-foreground mt-1">{cellRuns.length} Runs</div>
                  </div>
                  <div className="bg-gray-50 p-3 rounded-lg">
                    <div className="text-xs text-muted-foreground">√ò Effizienz</div>
                    <div className="text-lg font-bold">{formatCurrency(avgEfficiency)}/R</div>
                  </div>
                </div>

                {/* AI Evaluation Scores - Aggregate */}
                {(avgTechniqueScore || avgTacticScore) && (
                  <div className="border-t pt-4">
                    <h4 className="font-semibold mb-3">ü§ñ KI-Bewertung (Durchschnitt)</h4>
                    <div className="grid grid-cols-2 gap-4">
                      {avgTechniqueScore && (
                        <div className="bg-purple-50 p-4 rounded-lg border border-purple-200">
                          <div className="text-sm text-muted-foreground mb-1">Influence Technique</div>
                          <div className="text-3xl font-bold text-purple-600">
                            {avgTechniqueScore.toFixed(1)}/10
                          </div>
                          <div className="text-xs text-muted-foreground mt-1">{selectedCell.technique}</div>
                        </div>
                      )}
                      {avgTacticScore && (
                        <div className="bg-blue-50 p-4 rounded-lg border border-blue-200">
                          <div className="text-sm text-muted-foreground mb-1">Verhandlungstaktik</div>
                          <div className="text-3xl font-bold text-blue-600">
                            {avgTacticScore.toFixed(1)}/10
                          </div>
                          <div className="text-xs text-muted-foreground mt-1">{selectedCell.tactic}</div>
                        </div>
                      )}
                    </div>
                  </div>
                )}

                {/* Individual Runs List */}
                <div className="border-t pt-4">
                  <h4 className="font-semibold mb-3">üìä Einzelne Durchl√§ufe</h4>
                  <div className="space-y-2 max-h-60 overflow-y-auto">
                    {cellRuns.map((run) => (
                      <div key={run.id} className="flex items-center justify-between rounded border p-2 text-sm hover:bg-gray-50">
                        <div className="flex items-center gap-3">
                          <span className="text-muted-foreground">Run #{run.runNumber}</span>
                          <span className="font-medium">{formatCurrency(run.dealValue)}</span>
                          <span className="text-xs text-muted-foreground">{run.totalRounds} Runden</span>
                        </div>
                        {run.tacticalSummary && (
                          <Badge variant="outline" className="text-xs">
                            KI-Bewertung ‚úì
                          </Badge>
                        )}
                      </div>
                    ))}
                  </div>
                </div>

                {/* Tactical Summary from Best Run */}
                {bestRun?.tacticalSummary && (
                  <div className="border-t pt-4">
                    <h4 className="font-semibold mb-2">üìù Taktische Zusammenfassung (Bester Run)</h4>
                    <div className="text-xs text-muted-foreground mb-2">
                      Von Run #{bestRun.runNumber} ({formatCurrency(bestRun.dealValue)})
                    </div>
                    <p className="text-sm leading-relaxed bg-gray-50 p-4 rounded-lg">
                      {bestRun.tacticalSummary}
                    </p>
                  </div>
                )}

                {/* No Evaluation Yet */}
                {!bestRun?.tacticalSummary && (
                  <div className="border-t pt-4">
                    <div className="bg-amber-50 p-4 rounded-lg border border-amber-200">
                      <p className="text-sm text-amber-800">
                        ‚ÑπÔ∏è F√ºr diese Kombination wurde noch keine KI-Bewertung generiert.
                        Klicke auf "KI-Bewertung generieren" um eine Analyse zu erhalten.
                      </p>
                    </div>
                  </div>
                )}
              </div>
            </DialogContent>
          </Dialog>
        );
      })()}
    </div>
  );
}

